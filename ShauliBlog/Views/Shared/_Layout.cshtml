<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="~/Content/Blog.css" rel="stylesheet" type="text/css" media="screen" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/Shared/layout.js"></script>
</head>
<body>
    <header>
        @Html.Partial("_LoginPartial")
        <h1>Ha-Blog Shel Shauli</h1>
    </header>
    <canvas id="canvas" width="250" height="40"></canvas>
        <nav>
            <!-- Navigation -->
            <ul>
                @{string currentController = ViewContext.RouteData.Values["controller"].ToString();}
                <li class="@(currentController == "Blog" ? "selected" : "")">@Html.ActionLink("Blog", "Index", "Blog")</li>
                <li class="@(currentController == "Posts" || currentController == "Account" || currentController == "Comments" ? "selected" : "")">@Html.ActionLink("Mangement", "Index", "Posts")</li>
                <li class="@(currentController == "Fans" ? "selected" : "")">@Html.ActionLink("Fan Club", "Index", "Fans")</li>
                <li class="@(currentController == "Search" ? "selected" : "")">@Html.ActionLink("Search", "Index", "Search")</li>
                <li class="@(currentController == "Statistics" ? "selected" : "")">@Html.ActionLink("Statistics", "PopularPosts", "Statistics")</li>
                <li class="subscribe"><img src="~/Content/Images/rss.png" /><a href="/Subscribe">Subscribe via Mail</a></li>
            </ul>
        </nav>
        <section id="intro">
            <!-- Introduction -->

            <header>
                <h2>Do you have questions for me?</h2>
            </header>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut.</p>
            <img src="~/Content/Images/intro_shauli.png" alt="Shauli" />
        </section>
        <div id="content">
            @RenderBody()
            <aside>
                <section>
                    <header>
                        <h3>@Html.ActionLink("Categories", "Categories", "Statistics")</h3>
                    </header>
                    <ul>
                        <li>@Html.ActionLink("Sport", "GetPostsByCategory", "Search", new { category = (int)ShauliBlog.Models.Category.Sport }, null)</li>
                        <li>@Html.ActionLink("Blog", "GetPostsByCategory", "Search", new { category = (int)ShauliBlog.Models.Category.Blog }, null)</li>
                        <li>@Html.ActionLink("News", "GetPostsByCategory", "Search", new { category = (int)ShauliBlog.Models.Category.News }, null)</li>
                        <li>@Html.ActionLink("Entertainment", "GetPostsByCategory", "Search", new { category = (int)ShauliBlog.Models.Category.Entertainment }, null)</li>
                    </ul>
                </section>
            </aside>
        </div>
        <footer>
            <!-- Footer -->
            <div>
                <section id="about">
                        <h3>About</h3>
                    <p>This is a blog of the parlament!</p>
                </section>
                <section id="popular">
                        <h3>Popular</h3>
                    <ul id="popularList">
                    </ul>
                </section>
            </div>
        </footer>
</body>
</html>
